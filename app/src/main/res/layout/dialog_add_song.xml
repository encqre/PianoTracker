<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray">


    <TextView
        android:id="@+id/dialog_orderid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Order:"
        android:textColor="@color/very_light_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_orderid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_orderid" />

    <EditText
        android:id="@+id/dialog_orderid"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="1"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/light_gray"
        app:layout_constraintStart_toEndOf="@+id/dialog_orderid_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Title:"
        android:textColor="@color/very_light_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_title"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/dialog_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter title"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/light_gray"
        app:layout_constraintStart_toEndOf="@+id/dialog_title_text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_orderid" />

    <TextView
        android:id="@+id/dialog_videoid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Youtube ID:"
        android:textColor="@color/very_light_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_videoid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_videoid"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/dialog_videoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="Enter Youtube video ID"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/light_gray"
        app:layout_constraintStart_toEndOf="@+id/dialog_videoid_text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/dialog_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Score:"
        android:textColor="@color/very_light_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_score"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/dialog_score"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/light_gray"
        app:layout_constraintStart_toEndOf="@+id/dialog_score_text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_state_spinner" />

    <TextView
        android:id="@+id/dialog_seconds_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Total seconds played:"
        android:textColor="@color/very_light_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_seconds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_seconds"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/dialog_seconds"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/light_gray"
        app:layout_constraintStart_toEndOf="@+id/dialog_seconds_text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_score" />

    <TextView
        android:id="@+id/dialog_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Total count played:"
        android:textColor="@color/very_light_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_count"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/dialog_count"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/light_gray"
        app:layout_constraintStart_toEndOf="@+id/dialog_count_text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_seconds" />

    <TextView
        android:id="@+id/dialog_difficulty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Difficulty:"
        android:textColor="@color/very_light_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_difficulty_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_difficulty_spinner"
        app:layout_constraintVertical_bias="0.5" />

    <Spinner
        android:id="@+id/dialog_difficulty_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/dialog_difficulty_text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_videoid">

    </Spinner>

    <TextView
        android:id="@+id/dialog_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="State:"
        android:textColor="@color/very_light_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_state_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_state_spinner"
        app:layout_constraintVertical_bias="0.5" />

    <Spinner
        android:id="@+id/dialog_state_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/dialog_state_text"
        app:layout_constraintTop_toBottomOf="@+id/dialog_difficulty_spinner">

    </Spinner>


</androidx.constraintlayout.widget.ConstraintLayout>